rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper: Checks if user is logged in
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper: Validates image properties
    function isValidImage() {
      return request.resource.contentType.matches('image/.*')
             && request.resource.size < 5 * 1024 * 1024; // 5MB Limit
    }

    match /listings/{fileName} {
      // 1. CREATE: Allow if logged in + Valid Image
      allow create: if isSignedIn() && isValidImage();
      
      // 2. DELETE/UPDATE: Only if the user OWNS the file (via metadata)
      // This prevents User A from deleting User B's images.
      allow delete, update: if isSignedIn() 
                            && resource.metadata.userId == request.auth.uid;
                            
      allow read: if true; // Public can view images
    }

    // Default deny for everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}