rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // 1. Helper Function: Is user signed in?
    function isSignedIn() {
      return request.auth != null;
    }
    
    // 2. Helper: Is user the owner of this data?
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // --- COLLECTIONS ---

    // Users: Public profile read, Owner write
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }

    // Notifications: CRITICAL PRIVACY
    // Only the person receiving the notification can read it
    match /notifications/{notificationId} {
      allow read: if isSignedIn() && resource.data.toUserId == request.auth.uid;
      allow create: if isSignedIn(); // Backend functions handle creation mostly, but allow app to create if needed
    }

    // Listings, Books, Ads, Posts: Public Read, Auth Write
    match /listings/{docId} { allow read: if true; allow write: if isSignedIn(); }
    match /books/{docId} { allow read: if true; allow write: if isSignedIn(); }
    match /serviceRequests/{docId} { allow read: if true; allow write: if isSignedIn(); }
    match /posts/{docId} { allow read: if true; allow write: if isSignedIn(); }
    
    // Subcollections (Like Comments/Likes on posts)
    match /posts/{postId}/comments/{commentId} { allow read: if true; allow write: if isSignedIn(); }
    match /posts/{postId}/likes/{userId} { allow read: if true; allow write: if isSignedIn(); }

    // Exchange Requests: Only involved parties can read
    match /exchangeRequests/{requestId} {
      allow read: if isSignedIn() && (
        resource.data.requesterId == request.auth.uid || 
        resource.data.targetOwnerId == request.auth.uid
      );
      allow write: if isSignedIn();
    }
  }
}