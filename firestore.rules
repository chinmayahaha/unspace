rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // -----------------------------------------------------------------------
    // HELPERS
    // -----------------------------------------------------------------------
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.admin == true;
    }

    function isValidListing() {
      let d = request.resource.data;
      return d.keys().hasAll(['title', 'price', 'userId', 'createdAt'])
        && d.price is number && d.price >= 0
        && d.title is string && d.title.size() > 0
        && d.userId == request.auth.uid;
    }

    // -----------------------------------------------------------------------
    // USERS
    // -----------------------------------------------------------------------
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId) || isAdmin();
    }

    // -----------------------------------------------------------------------
    // LISTINGS
    // -----------------------------------------------------------------------
    match /listings/{listingId} {
      allow read: if true;
      allow create: if isSignedIn() && isValidListing();
      allow update: if isOwner(resource.data.userId) || isAdmin();
      allow delete: if isOwner(resource.data.userId) || isAdmin();
    }

    // -----------------------------------------------------------------------
    // NOTIFICATIONS (kept for backward compat, but use messaging now)
    // -----------------------------------------------------------------------
    match /notifications/{notifId} {
      allow read:   if isSignedIn() && resource.data.toUserId == request.auth.uid;
      allow create: if true;
      allow update: if isSignedIn() && resource.data.toUserId == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.toUserId == request.auth.uid;
    }

    // -----------------------------------------------------------------------
    // BOOKS
    // -----------------------------------------------------------------------
    match /books/{bookId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update: if isOwner(resource.data.ownerId) || isAdmin();
      allow delete: if isOwner(resource.data.ownerId) || isAdmin();
    }

    // -----------------------------------------------------------------------
    // EXCHANGE REQUESTS
    // -----------------------------------------------------------------------
    match /exchangeRequests/{exchangeId} {
      allow read: if isSignedIn()
                  && (resource.data.requesterId == request.auth.uid
                      || resource.data.targetOwnerId == request.auth.uid);
      allow create: if isSignedIn() && request.resource.data.requesterId == request.auth.uid;
      allow update: if isSignedIn()
                    && (resource.data.requesterId == request.auth.uid
                        || resource.data.targetOwnerId == request.auth.uid);
      allow delete: if isAdmin();
    }

    // -----------------------------------------------------------------------
    // SERVICE REQUESTS (AdsX)
    // -----------------------------------------------------------------------
    match /serviceRequests/{requestId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.clientId == request.auth.uid;
      allow update: if isSignedIn()
                    && (resource.data.clientId == request.auth.uid
                        || resource.data.assignedTo == request.auth.uid
                        || isAdmin());
      allow delete: if isOwner(resource.data.clientId) || isAdmin();
    }

    // -----------------------------------------------------------------------
    // LOST & FOUND
    // -----------------------------------------------------------------------
    match /lostAndFound/{itemId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.posterId == request.auth.uid;
      allow update: if isOwner(resource.data.posterId) || isAdmin();
      allow delete: if isOwner(resource.data.posterId) || isAdmin();
    }

    // -----------------------------------------------------------------------
    // CONVERSATIONS
    // -----------------------------------------------------------------------
    match /conversations/{conversationId} {
      allow read: if isSignedIn() && request.auth.uid in resource.data.participants;
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.participants;
      allow update: if isSignedIn() && request.auth.uid in resource.data.participants;
      allow delete: if isAdmin();

      // Messages subcollection
      match /messages/{messageId} {
        allow read: if isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
        allow create: if isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
        allow update: if isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
        allow delete: if isAdmin();
      }
    }

    // -----------------------------------------------------------------------
    // ADMIN STATS
    // -----------------------------------------------------------------------
    match /adminStats/{docId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    // -----------------------------------------------------------------------
    // ORDERS
    // -----------------------------------------------------------------------
    match /orders/{orderId} {
      allow read:   if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if true;
      allow update: if true;
      allow delete: if isAdmin();
    }

    // -----------------------------------------------------------------------
    // ANALYTICS EVENTS
    // -----------------------------------------------------------------------
    match /analyticsEvents/{eventId} {
      allow read:   if isAdmin();
      allow create: if true;
    }

    // -----------------------------------------------------------------------
    // LISTING INTERESTS
    // -----------------------------------------------------------------------
    match /listing_interests/{interestId} {
      allow read: if isSignedIn()
                  && (resource.data.buyerId == request.auth.uid
                      || resource.data.sellerId == request.auth.uid);
      allow create: if isSignedIn() && request.resource.data.buyerId == request.auth.uid;
      allow update: if isSignedIn() && resource.data.sellerId == request.auth.uid;
    }

    // -----------------------------------------------------------------------
    // REPORTS
    // -----------------------------------------------------------------------
    match /reports/{reportId} {
      allow read:   if isAdmin();
      allow create: if isSignedIn();
    }


    // -----------------------------------------------------------------------
    // CONTACT MESSAGES
    // -----------------------------------------------------------------------
    match /contactMessages/{msgId} {
      allow read, update, delete: if isAdmin();
      allow create: if true;
    }

  }
}