rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Check if the data coming in has valid fields
    function isValidListing() {
      let incoming = request.resource.data;
      return incoming.keys().hasAll(['title', 'price', 'userId', 'createdAt']) 
             && incoming.price is number
             && incoming.price >= 0
             && incoming.title is string
             && incoming.title.size() > 0
             && incoming.userId == request.auth.uid; // Must match logged-in user
    }

    // --- RULES ---

    // 1. USERS: Strict Profile Security
    match /users/{userId} {
      allow read: if isSignedIn(); // Or restrict to isOwner(userId) for privacy
      allow write: if isOwner(userId);
    }

    // 2. LISTINGS: Public Read, strict Write
    match /listings/{listingId} {
      allow read: if true;
      
      // Create: Must be signed in AND data must be valid
      allow create: if isSignedIn() && isValidListing();
      
      // Update: Must be Owner AND cannot change ownership (userId)
      allow update: if isOwner(resource.data.userId) 
                    && request.resource.data.userId == resource.data.userId // ID unchanged
                    && isValidListing(); 
                    
      allow delete: if isOwner(resource.data.userId);
    }

    // 3. NOTIFICATIONS: High Privacy
    match /notifications/{notifId} {
      // Only the recipient can read
      allow read: if isSignedIn() && resource.data.toUserId == request.auth.uid;
      // Only the sender can create (and must mark themselves as sender)
      allow create: if isSignedIn() && request.resource.data.fromUserId == request.auth.uid;
    }
  }
}